					"description": "Velheim Server Name"
				},
				{
					"name": "SERVER_PORTS",
					"label": "SERVER_PORTS",
					"default": "2456-2457",
					"description": "Velheim Server Port range"
				},
				{
					"name": "GAME_PORT",
					"label": "GAME_PORT",
					"default": "2456",
					"description": "Velheim Game Port"
				},
				{
					"name": "SERVER_PASS",
					"label": "SERVER_PASS",
					"default": "password",
					"description": "Velheim Server Password"
				},
				{
					"name": "SERVER_PUBLIC",
					"label": "SERVER_PUBLIC",
					"default": "true",
					"description": "Velheim Server is public"
				},
				{
					"name": "BACKUPS_DIRECTORY",
					"label": "BACKUPS_DIRECTORY",
					"default": "/config/backups",
					"description": "Backups directory inside Valheim"
				},
				{
					"name": "BACKUPS_BIND_DIRECTORY",
					"label": "BACKUPS_BIND_DIRECTORY",
