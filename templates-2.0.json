			"platform": "linux",
			"categories": [
				"games"
			],
			"repository": {
				"url": "https://github.com/chris3081/portainer-app-templates",
				"stackfile": "stacks/valheim/docker-compose.yml"
			},
			"logo": "https://github.com/chris3081/portainer-app-templates/raw/main/icons/Logo_valheim.png",
			"env": [
				{
					"name": "SERVER_NAME",
					"label": "SERVER_NAME",
